{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["controller/*"],
    "@model/*": ["model/*"],
    "@utils/*": ["utils/*"],
    "@config/*": ["config/*"],
    "@middlewares/*": ["middlewares/*"],
    "@routes/*": ["routes/*"],
    "@services/*": ["services/*"],
    "@graphql/*": ["graphql/*"],
    "@db/*": ["db/*"],
  },
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
